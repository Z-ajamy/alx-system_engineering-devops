global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log     global
    option  httplog
    option  dontlognull
    timeout connect 5000ms
    timeout client  50000ms
    timeout server  50000ms

frontend https_front
    bind *:443 ssl crt /etc/letsencrypt/live/www.holberton.online/fullchain.pem key /etc/letsencrypt/live/www.holberton.online/privkey.pem
    default_backend web_servers

backend web_servers
    server web01 127.0.0.1:80 check
